@model ResetPasswordViewModel
@{
   ViewBag.title = "ResetPassword";
}

<h1>Reset Password</h1>
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="ResetPassword" asp-controller="Account">
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />
           
            <div class="row form-group">
                <label asp-for="Password" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" placeholder="Passowrd" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row form-group">
                <label asp-for="ConfirmPassword" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Passowrd" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>
