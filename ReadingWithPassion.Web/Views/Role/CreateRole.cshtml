@model RoleCreateViewModel
@{
    ViewBag.Title = "Create Role";
}

<h1>Create Role</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateRole" asp-controller="Role" method="post">

            <div class="row form-group">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" placeholder="Role name"/>
                <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <button type="submit" class="btn btn-primary" style="width:auto">Create Role</button>
            </div>

        </form>
    </div>
</div>
