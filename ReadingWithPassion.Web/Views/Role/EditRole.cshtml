@model RoleEditViewModel
@{
    ViewBag.Title = "Edit Role";
}

    <div class="row">
        <div class="col-md-12">
            <form asp-action="EditRole" asp-controller="Role" method="post" class="mt-3">

                <div class="row form-group">
                    <input type="hidden" asp-for="Id" />
                    <label class="col-sm-2 col-form-label" asp-for="Name"></label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" placeholder="Role Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group" asp-validation-summary="All"></div>

                <div class="row form-group">
                    <button type="submit" class="btn btn-primary mr-1" style="width:auto">Update</button>
                    <a asp-action="Roles" asp-controller="Role" class="btn btn-primary">Cancel</a>
                </div>
            </form>

            <div class="card">

                <div class="card-header">
                    <h3>Users in this role</h3>
                </div>

                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5>@user</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">None at the moment</h5>
                    }
                </div>

                <div class="card-footer">
                    <a asp-action="UsersInRole" asp-controller="Role" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">users</a>
                </div>

            </div>
        </div>
    </div>
